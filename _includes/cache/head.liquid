<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>{{ include.title }}</title>
<meta name="author" content="{{ author }}">
<meta name="copyright" content="{{ author }}">
<meta name="publisher" content="{{ author }}">
<meta name="generator" content="Jekyll v{{ jekyll.version }}">
<meta name="language" property="og:locale" content="de-DE">
<meta name="description" property="og:description" content="{{ include.description }}">
<meta name="theme-color" content="{{ site.theme-color | default: '#ffffff' }}">

{%- unless site.keywords == empty -%}
<meta name="keywords" content="{{ site.keywords | join: ', ' }}">
{%- endunless -%}

{% include_cached cache/site_verification.liquid %}

<meta property="og:type" content="WebSite">
<meta property="og:url" content="{{ site.url }}{{ include.path }}">
<meta property="og:title" content="{{ include.title }}">
<meta property="og:site_name" content="{{ site.github.owner_name | capitalize }}">
<meta property="og:image" content="{{ site.url }}/assets/favicon/square.png">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="100">
<meta property="og:image:height" content="100">

<meta property="twitter:title" content="{{ include.title }}">
<meta property="twitter:description" content="{{ include.description }}">
<meta property="twitter:card" content="summary">
<meta property="twitter:image" content="{{ site.url }}/assets/favicon/square.png">

{% include_cached cache/favicon.liquid %}
{% include_cached cache/prefetch.liquid %}

<link rel="canonical" href="{{ site.url }}{{ include.path }}">
<link rel="stylesheet" href="/assets/css/main.css">
<script src="/assets/js/main.js" defer></script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "headline": "{{ include.title }}",
  "description": "{{ include.description | strip_newlines }}",
  "url": "{{ site.url }}{{ include.path }}"
}
</script>
